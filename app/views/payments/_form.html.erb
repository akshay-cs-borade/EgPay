<%= form_with(model: payment) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :payment_date, class: "form-label" %>
    <%= form.date_field :payment_date, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :amount, class: "form-label" %>
    <%= form.text_field :amount, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :payment_method, class: "form-label" %>
    <%= form.text_field :payment_method, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :transaction_id, class: "form-label" %>
    <%= form.text_field :transaction_id, class: "form-input" %>
  </div>

  <div class="flex items-center justify-between flex-wrap">
    <div class="sm:flex-1 sm:mb-0 mb-6">
      <%= form.submit class: "btn btn-primary" %>
    </div>

    <% if form.object.new_record? %>
      <%= link_to "Cancel", payments_path, class: "btn btn-light" %>
    <% else %>
      <%= link_to "Cancel", payment_path(@payment), class: "btn btn-light" %>
    <% end %>
  </div>
<% end %>
