<div class="max-w-3xl mx-auto px-4 my-16">
  <div class="flex items-center justify-between pb-6 border-b dark:border-slate-700">
    <h1 class="text-4xl font-extrabold text-slate-900 dark:text-slate-100 tracking-tight">Invoice Items</h1>
    <div class="flex items-center justify-end">
      <%= link_to "New Invoice Item", new_invoice_item_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div id="invoice_items" class="divide-y dark:text-slate-700 mb-10">
    <% @invoice_items.each do |invoice_item| %>
      <div class="py-3">
        <%= render invoice_item %>

        <%= link_to "View invoice item", invoice_item, class: "btn-link inline-block my-3" %>
      </div>
    <% end %>
  </div>
</div>
