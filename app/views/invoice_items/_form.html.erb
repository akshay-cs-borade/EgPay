<%= form_with(model: invoice_item) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :quantity, class: "form-label" %>
    <%= form.number_field :quantity, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :unit_price, class: "form-label" %>
    <%= form.text_field :unit_price, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :line_total, class: "form-label" %>
    <%= form.text_field :line_total, class: "form-input" %>
  </div>

  <div class="flex items-center justify-between flex-wrap">
    <div class="sm:flex-1 sm:mb-0 mb-6">
      <%= form.submit class: "btn btn-primary" %>
    </div>

    <% if form.object.new_record? %>
      <%= link_to "Cancel", invoice_items_path, class: "btn btn-light" %>
    <% else %>
      <%= link_to "Cancel", invoice_item_path(@invoice_item), class: "btn btn-light" %>
    <% end %>
  </div>
<% end %>
