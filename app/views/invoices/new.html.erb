  }

  #customer-phone:focus {
    border-color: #007bff;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
  }

  .qr-container{
    display: none;
  }

  .product-drop span {
    min-width: 120px;
    b { left: 90% !important; }
  }
</style>

