<%= form_with(model: invoice) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :invoice_number, class: "form-label" %>
    <%= form.number_field :invoice_number, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :customer_id, class: "form-label" %>
    <%= form.number_field :customer_id, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :issue_date, class: "form-label" %>
    <%= form.datetime_field :issue_date, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :due_date, class: "form-label" %>
    <%= form.datetime_field :due_date, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :status, class: "form-label" %>
    <%= form.number_field :status, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :total_amount, class: "form-label" %>
    <%= form.number_field :total_amount, class: "form-input" %>
  </div>

  <div class="flex items-center justify-between flex-wrap">
    <div class="sm:flex-1 sm:mb-0 mb-6">
      <%= form.submit class: "btn btn-primary" %>
    </div>

    <% if form.object.new_record? %>
      <%= link_to "Cancel", invoices_path, class: "btn btn-light" %>
    <% else %>
      <%= link_to "Cancel", invoice_path(@invoice), class: "btn btn-light" %>
    <% end %>
  </div>
<% end %>
